{
  "name": {
    "prefix": "name",
    "body": [
      "- name: ${1:name}"
    ],
    "description": "Simple Ansible task"
  },
  "playbook": {
    "prefix": "playbook",
    "body": [
      "---",
      "- name: ${2:Playbook}",
      "  hosts: ${1:hosts}",
      "",
      "  tasks:",
      "${0:task}"
    ],
    "description": "Simple Playbook template"
  }
}
